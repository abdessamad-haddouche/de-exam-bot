{
  "drivers": {
    "default_cache_path": "./selenium-drivers",
    "cache_valid_days": 7,
    "auto_update": true,
    "supported_browsers": ["chrome", "firefox"]
  },
  "browser_defaults": {
    "default_browser": "chrome",
    "headless": false,
    "stealth_mode": true,
    "window_size": {
      "width": 1920,
      "height": 1080
    },
    "timeout": 30
  }
}